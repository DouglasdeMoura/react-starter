{
  "name": "react-starter",
  "version": "1.0.0",
  "description": "React project starter with Prettier, ESlint, Commitlint, Storybook and Jest.",
  "repository": "https://github.com/douglasdemoura/react-starter",
  "author": "Douglas Moura <douglas.ademoura@gmail.com> (https://douglasmoura.dev)",
  "license": "MIT",
  "source": "src/index.html",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "generate": "yarn plop --plopfile generators/plopfile.js",
    "test": "jest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^1.3.2",
    "jest-environment-jsdom": "^28.0.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "vite": "^2.9.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@storybook/addon-a11y": "^6.5.6",
    "@storybook/addon-actions": "^6.5.6",
    "@storybook/addon-essentials": "^6.5.6",
    "@storybook/addon-links": "^6.5.6",
    "@storybook/react": "^6.5.6",
    "@storybook/testing-react": "^1.3.0",
    "@swc/core": "^1.2.175",
    "@swc/jest": "^0.2.20",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.1.1",
    "@types/jest": "^27.5.0",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@typescript-eslint/utils": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-storybook": "^0.5.12",
    "eslint-plugin-testing-library": "^5.3.1",
    "husky": ">=7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.0.3",
    "jest-axe": "^6.0.0",
    "jest-watch-typeahead": "^1.1.0",
    "lint-staged": ">=12",
    "plop": "^3.1.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "*.{ts,tsx,jsx,js}": [
      "eslint --fix",
      "jest --findRelatedTests --bail"
    ]
  }
}
