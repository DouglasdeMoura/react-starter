{
  "name": "react-starter",
  "version": "1.0.0",
  "description": "React project starter with Prettier, ESlint, Commitlint, Storybook and Jest.",
  "repository": "https://github.com/douglasdemoura/react-starter",
  "author": "Douglas Moura <douglas.ademoura@gmail.com> (https://douglasmoura.dev)",
  "license": "MIT",
  "source": "src/index.html",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "generate": "yarn plop --plopfile generators/plopfile.js",
    "test": "jest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^3.0.1",
    "jest-environment-jsdom": "^29.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^4.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-vite": "^0.3.0",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/testing-react": "^1.3.0",
    "@swc/core": "^1.3.31",
    "@swc/jest": "^0.2.24",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@typescript-eslint/utils": "^5.50.0",
    "babel-loader": "^9.1.2",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.10",
    "eslint-plugin-testing-library": "^5.10.0",
    "husky": ">=8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.4.1",
    "jest-axe": "^7.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": ">=13",
    "plop": "^3.1.1",
    "prettier": "^2.8.3",
    "typescript": "^4.9.5",
    "vite-tsconfig-paths": "^4.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx,jsx,js}": [
      "eslint --fix",
      "jest --findRelatedTests --bail"
    ]
  }
}
